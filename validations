 private void createAddAccountBpsSoapRequest(WebapiRequest webApiRequest, BPSAddObject bpsAddObject) {
        Account account = bpsAddObject.getAccount();
        Address address = bpsAddObject.getAddress();
        AbstractObject abstractObject = new AbstractObject();
        abstractObject.setName("Account");
        List<Property> accountPropertyList = new ArrayList<>();
        accountPropertyList.add(createProperty("firstName", BpsAddAccountNameSanitizer.sanitize(account.getFirstName())));
        accountPropertyList.add(createProperty("lastName",  BpsAddAccountNameSanitizer.sanitize(account.getLastName())));
        accountPropertyList.add(createProperty("contactPhoneNumber", account.getContactPhoneNumber()));
        accountPropertyList.add(createProperty("status", account.getStatus()));
        abstractObject.getProp().addAll(accountPropertyList);
        abstractObject.getObject().add(populateAddressObject(address));
        webApiRequest.getArguments().getObject().add(abstractObject);
    }
